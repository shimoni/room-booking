{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "db:generate": "npm run migration:generate",
    "db:migrate": "npm run migration:run",
    "db:reset": "npm run migration:revert && npm run migration:run && npm run seed",
    "dev": "nest start -b swc -w",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/migrations/manual-migration",
    "migration:generate": "npm run build && node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js migration:generate src/migrations/auto-migration -d ormconfig.ts",
    "migration:revert": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js migration:revert -d ormconfig.ts",
    "migration:run": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js migration:run -d ormconfig.ts",
    "migration:show": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js migration:show -d ormconfig.ts",
    "seed": "ts-node -r tsconfig-paths/register scripts/seed.ts",
    "seed:clear": "ts-node -r tsconfig-paths/register scripts/seed-clear.ts",
    "start": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@blazity/nest-file-fastify": "^1.0.0",
    "@fastify/cookie": "^10.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@nest-lab/fastify-multer": "^1.3.0",
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-fastify": "^11.1.3",
    "argon2": "^0.43.0",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-yet": "^5.1.5",
    "helmet": "^8.1.0",
    "multer": "2.0.0",
    "mysql2": "^3.11.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "path-to-regexp": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.9.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "3.717.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nestjs/throttler": "^6.3.0",
    "@nestjs/typeorm": "^11.0.0",
    "@repo/constants": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@swc/cli": "^0.7.0",
    "@swc/core": "^1.10.14",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "axios": "^1.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "jest": "^30.0.0",
    "nestjs-pino": "^4.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20"
  }
}
