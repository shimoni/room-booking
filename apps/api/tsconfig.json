{
  "extends": "@repo/ts-config/nestjs.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "module": "NodeNext",
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
